<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson1.LessonOne"
    android:background="@color/black"
    >



    <ImageView
        android:id="@+id/blur1"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/baseline_lens_blur_24"
        app:layout_constraintBottom_toTopOf="@id/vwTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <view
        android:id="@+id/vwTitle"
        class="android.widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Why Kotlin?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textFontWeight="800"
        android:textColor="@color/purple_700"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@id/vwPara1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blur1"
        app:layout_constraintVertical_bias="0.1" />

    <view
        android:id="@+id/vwPara1"
        class="android.widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginHorizontal="18dp"
        android:text="@string/lessonOneDescription"
        android:textAlignment="center"
        android:textColor="@color/teal_700"
        android:textFontWeight="500"
        android:textSize="26sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vwTitle"
        />

    <ImageView
        android:id="@+id/blur2"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:src="@drawable/baseline_lens_blur_24_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vwTitle"
        />




</androidx.constraintlayout.widget.ConstraintLayout>